<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #F4F7FC;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dtdt.DormManager.controller.PaymentController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #1A1A1A;" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Payment Registration">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Text>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Pane prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: #E0E0E0; -fx-background-radius: 30;" />
                <VBox>
                    <Label fx:id="tenantNameLabel" text="Tenant Name" textFill="#1a1a1a">
                        <font><Font name="System Bold" size="24.0" /></font>
                    </Label>
                    <Label fx:id="tenantIdLabel" text="Tenant ID" textFill="#555555">
                        <font><Font size="16.0" /></font>
                    </Label>
                </VBox>
                <Pane HBox.hgrow="ALWAYS" /> <Hyperlink onAction="#goToDashboard" text="Dashboard" />
                <Hyperlink text="Profile" />
                <Hyperlink text="Payment" style="-fx-font-weight: bold; -fx-underline: true;" />
                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="tenantEmailLabel" text="tenant@test.com" textFill="#1a1a1a">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <Label text="Tenant" textFill="#555555" />
                </VBox>
                <Hyperlink onAction="#onLogoutClick" text="Logout" />
            </HBox>

            <HBox spacing="30.0">
                <VBox>
                    <Label fx:id="buildingLabel" text="Building A" textFill="#1a1a1a">
                        <font><Font name="System Bold" size="48.0" /></font>
                    </Label>
                    <Label fx:id="roomLabel" text="Room 5210" textFill="#555555">
                        <font><Font size="24.0" /></font>
                    </Label>
                </VBox>
                <Pane HBox.hgrow="ALWAYS" /> <VBox alignment="TOP_RIGHT" spacing="10.0">
                <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 8; -fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-radius: 8;">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <VBox>
                            <Label text="Contract Type" textFill="#555555" />
                            <Label fx:id="contractTypeLabel" text="6-Month Term" textFill="#1a1a1a">
                                <font><Font name="System Bold" size="14.0" /></font>
                            </Label>
                        </VBox>
                    </HBox>
                    <Label text="Date Start - Date End" textFill="#555555" />
                    <Label fx:id="contractDatesLabel" text="July 2025 - December 2025" textFill="#1a1a1a">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                </VBox>
            </VBox>
            </HBox>

            <Line endX="1180.0" stroke="#D0D0D0" strokeWidth="0.5" />

            <HBox spacing="30.0" VBox.vgrow="ALWAYS">
                <VBox prefWidth="350.0" spacing="15.0">
                    <Label text="PAY NOW:">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <HBox spacing="10.0">
                        <Button style="-fx-background-color: #E0E0E0;" text="Gcash" />
                        <Button style="-fx-background-color: #1A1A1A; -fx-text-fill: WHITE;" text="BPI" />
                        <Button style="-fx-background-color: #E0E0E0;" text="BDO" />
                        <Button style="-fx-background-color: #E0E0E0;" text="Metrobank" />
                    </HBox>
                    <Label text="Request Reciept" />
                    <ComboBox fx:id="receiptComboBox" prefWidth="300.0" promptText="July" />
                    <Button fx:id="savePdfButton" style="-fx-background-color: #1A1A1A; -fx-text-fill: WHITE;" text="Save PDF" />
                    <VBox style="-fx-background-color: #FFF0F0; -fx-border-color: #FFB0B0; -fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5;">
                        <Label text="Late Payment Detected" textFill="#D8000C">
                            <font><Font name="System Bold" size="12.0" /></font>
                        </Label>
                        <Text fill="#D8000C" text="Please pay via tech order to avoid problems with future payments" wrappingWidth="300.0" />
                    </VBox>
                </VBox>

                <VBox HBox.hgrow="ALWAYS" spacing="10.0">
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background-insets: 0;" VBox.vgrow="ALWAYS">
                        <VBox fx:id="billingHistoryVBox" spacing="15.0">
                            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 0 0 15 0;">
                                <VBox>
                                    <Label text="July 2025">
                                        <font><Font name="System Bold" size="16.0" /></font>
                                    </Label>
                                    <HBox spacing="5.0">
                                        <Label text="Current Status:" />
                                        <Label text="PAID" style="-fx-text-fill: #008000; -fx-font-weight: bold;" />
                                    </HBox>
                                    <HBox spacing="5.0">
                                        <Label text="Remaining Balance:" />
                                        <Label text="0.00" />
                                    </HBox>
                                </VBox>
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 0 0 15 0;">
                                <VBox>
                                    <Label text="August 2025">
                                        <font><Font name="System Bold" size="16.0" /></font>
                                    </Label>
                                    <HBox spacing="5.0">
                                        <Label text="Current Status:" />
                                        <Label text="PAID" style="-fx-text-fill: #008000; -fx-font-weight: bold;" />
                                    </HBox>
                                    <HBox spacing="5.0">
                                        <Label text="Remaining Balance:" />
                                        <Label text="0.00" />
                                    </HBox>
                                </VBox>
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 0 0 15 0;">
                                <VBox>
                                    <Label text="September 2025">
                                        <font><Font name="System Bold" size="16.0" /></font>
                                    </Label>
                                    <HBox spacing="5.0">
                                        <Label text="Current Status:" />
                                        <Label text="LATE" style="-fx-text-fill: #D8000C; -fx-font-weight: bold;" />
                                    </HBox>
                                    <HBox spacing="5.0">
                                        <Label text="Remaining Balance:" />
                                        <Label text="250" />
                                    </HBox>
                                </VBox>
                            </HBox>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>