<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #F4F7FC;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dtdt.DormManager.controller.AdminPanelController">
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #1A1A1A;" BorderPane.alignment="CENTER">
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Admin Dashboard">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Text>
                <Pane HBox.hgrow="ALWAYS" />
                <Label fx:id="adminNameLabel" text="Admin Name" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Hyperlink onAction="#onLogoutClick" text="Logout" style="-fx-text-fill: white;" />
            </HBox>
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;" spacing="20.0">
                <padding>
                    <Insets left="20.0" right="20.0" top="10.0" bottom="10.0" />
                </padding>
                <Hyperlink text="Buildings" onAction="#onBuildingsClick" style="-fx-font-weight: bold;" />
                <Hyperlink text="Tenants" onAction="#onTenantsClick" />
                <Hyperlink text="Maintenance" onAction="#onMaintenanceClick" />
                <Hyperlink text="Announcements" onAction="#onAnnouncementsClick" />
                <Hyperlink text="Reports" onAction="#onReportsClick" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
                </padding>

                <!-- Buildings Section -->
                <VBox fx:id="buildingsSection" spacing="10.0">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label text="Buildings Management" style="-fx-font-size: 24; -fx-font-weight: bold;" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button text="Add Building" onAction="#onAddBuildingClick" 
                                style="-fx-background-color: #1A1A1A; -fx-text-fill: white;" />
                    </HBox>
                    <TableView fx:id="buildingsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="buildingIdColumn" text="Building ID" />
                            <TableColumn fx:id="buildingNameColumn" text="Name" />
                            <TableColumn fx:id="buildingAddressColumn" text="Address" />
                            <TableColumn fx:id="buildingCapacityColumn" text="Capacity" />
                            <TableColumn fx:id="buildingOccupancyColumn" text="Occupancy" />
                            <TableColumn fx:id="buildingActionsColumn" text="Actions" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Tenants Section -->
                <VBox fx:id="tenantsSection" spacing="10.0" visible="false">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label text="Tenants Management" style="-fx-font-size: 24; -fx-font-weight: bold;" />
                        <TextField fx:id="tenantSearchField" promptText="Search tenants..." 
                                 style="-fx-background-radius: 20; -fx-padding: 8;" />
                    </HBox>
                    <TableView fx:id="tenantsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="tenantIdColumn" text="ID" />
                            <TableColumn fx:id="tenantNameColumn" text="Name" />
                            <TableColumn fx:id="tenantBuildingColumn" text="Building" />
                            <TableColumn fx:id="tenantRoomColumn" text="Room" />
                            <TableColumn fx:id="tenantContactColumn" text="Contact" />
                            <TableColumn fx:id="tenantStatusColumn" text="Status" />
                            <TableColumn fx:id="tenantActionsColumn" text="Actions" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Maintenance Section -->
                <VBox fx:id="maintenanceSection" spacing="10.0" visible="false">
                    <Label text="Maintenance Requests" style="-fx-font-size: 24; -fx-font-weight: bold;" />
                    <TableView fx:id="maintenanceTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="maintenanceDateColumn" text="Date" />
                            <TableColumn fx:id="maintenanceBuildingColumn" text="Building" />
                            <TableColumn fx:id="maintenanceRoomColumn" text="Room" />
                            <TableColumn fx:id="maintenanceIssueColumn" text="Issue" />
                            <TableColumn fx:id="maintenanceStatusColumn" text="Status" />
                            <TableColumn fx:id="maintenanceActionsColumn" text="Actions" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Announcements Section -->
                <VBox fx:id="announcementsSection" spacing="10.0" visible="false">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label text="Announcements" style="-fx-font-size: 24; -fx-font-weight: bold;" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button text="New Announcement" onAction="#onNewAnnouncementClick" 
                                style="-fx-background-color: #1A1A1A; -fx-text-fill: white;" />
                    </HBox>
                    <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
                        <TextField fx:id="announcementTitleField" promptText="Announcement Title" 
                                 style="-fx-font-size: 14; -fx-padding: 8;" />
                        <TextArea fx:id="announcementContentArea" promptText="Announcement Content" 
                                VBox.vgrow="ALWAYS" style="-fx-font-size: 14;" />
                        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10 0 0 0;">
                            <Button text="Cancel" onAction="#onCancelAnnouncementClick" 
                                    style="-fx-background-color: #E0E0E0;" />
                            <Button text="Post" onAction="#onPostAnnouncementClick" 
                                    style="-fx-background-color: #1A1A1A; -fx-text-fill: white;" />
                        </HBox>
                    </VBox>
                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                        <VBox fx:id="announcementsList" spacing="10.0" />
                    </ScrollPane>
                </VBox>

                <!-- Reports Section -->
                <VBox fx:id="reportsSection" spacing="10.0" visible="false">
                    <Label text="Reports" style="-fx-font-size: 24; -fx-font-weight: bold;" />
                    <HBox spacing="20.0">
                        <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;" 
                              prefWidth="300.0">
                            <Label text="Occupancy Rate" style="-fx-font-weight: bold; -fx-font-size: 16;" />
                            <Label fx:id="occupancyRateLabel" text="85%" style="-fx-font-size: 36;" />
                        </VBox>
                        <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;" 
                              prefWidth="300.0">
                            <Label text="Active Maintenance" style="-fx-font-weight: bold; -fx-font-size: 16;" />
                            <Label fx:id="activeMaintenanceLabel" text="12" style="-fx-font-size: 36;" />
                        </VBox>
                        <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;" 
                              prefWidth="300.0">
                            <Label text="Total Revenue" style="-fx-font-weight: bold; -fx-font-size: 16;" />
                            <Label fx:id="totalRevenueLabel" text="â‚±1,234,567" style="-fx-font-size: 36;" />
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
