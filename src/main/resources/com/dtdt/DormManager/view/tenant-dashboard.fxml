<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #F4F7FC;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dtdt.DormManager.controller.TenantDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #1A1A1A;" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Dashboard">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Text>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <ImageView fx:id="profileImageView" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" />
                <VBox>
                    <Label fx:id="tenantNameLabel" text="Tenant Name" textFill="#1a1a1a">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    <Label fx:id="tenantIdLabel" text="Tenant ID" textFill="#555555">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                </VBox>
                <Pane HBox.hgrow="ALWAYS" /> <Hyperlink text="Dashboard" style="-fx-font-weight: bold; -fx-underline: true;" />
                <Hyperlink text="Profile" />
                <Hyperlink text="Payment" onAction="#onPaymentClick" />
                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="tenantEmailLabel" text="tenant@test.com" textFill="#1a1a1a">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <Label text="Tenant" textFill="#555555" />
                </VBox>
                <Hyperlink onAction="#onLogoutClick" text="Logout" />
            </HBox>

            <HBox spacing="30.0">
                <VBox>
                    <Label fx:id="buildingLabel" text="Building A" textFill="#1a1a1a">
                        <font>
                            <Font name="System Bold" size="48.0" />
                        </font>
                    </Label>
                    <Label fx:id="roomLabel" text="Room 5210" textFill="#555555">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                </VBox>
                <Pane HBox.hgrow="ALWAYS" /> <VBox alignment="TOP_RIGHT" spacing="10.0">
                <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 8; -fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-radius: 8;">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <VBox>
                            <Label text="Contract Type" textFill="#555555" />
                            <Label fx:id="contractTypeLabel" text="6-Month Term" textFill="#1a1a1a">
                                <font>
                                    <Font name="System Bold" size="14.0" />
                                </font>
                            </Label>
                        </VBox>
                    </HBox>
                    <Label text="Date Start - Date End" textFill="#555555" />
                    <Label fx:id="contractDatesLabel" text="July 2025 - December 2025" textFill="#1a1a1a">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                </VBox>
                <Button fx:id="requestMaintenanceButton" onAction="#onRequestMaintenanceClick" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #1A1A1A; -fx-text-fill: WHITE; -fx-font-weight: bold;" text="Request Maintenance" />
            </VBox>
            </HBox>

            <HBox spacing="30.0" VBox.vgrow="ALWAYS">
                <VBox HBox.hgrow="ALWAYS" spacing="10.0">
                    <Label text="ANNOUNCEMENTS">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background-insets: 0;" VBox.vgrow="ALWAYS">
                            <VBox fx:id="announcementsVBox" spacing="10.0">
                                <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                </padding>
                                <VBox spacing="5.0" style="-fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 0 0 15 0;">
                                    <Label text="OCTOBER 17, 2025" textFill="#1a1a1a">
                                        <font><Font name="System Bold" size="13.0" /></font>
                                    </Label>
                                    <Text fill="#333333" text="The Admin office will undergo its monthly pest control today, October 17, 2025, at 3:00 PM. Our office at Room 100, 1st Floor, Building 1 will remian open until then, after which operations will temporarily move to Building 3 for the rest of the day." wrappingWidth="500.0" />
                                </VBox>
                            </VBox>
                        </ScrollPane>
                    </VBox>
                </VBox>

                <VBox prefWidth="350.0" spacing="10.0">
                    <Label text="MAINTENANCE REQUESTS">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background-insets: 0;" VBox.vgrow="ALWAYS">
                        <VBox fx:id="maintenanceVBox" spacing="10.0">
                            <VBox style="-fx-background-color: #EAEAEA; -fx-background-radius: 8; -fx-padding: 15;">
                                <Label text="Pending: 24/10/2025" textFill="#1a1a1a">
                                    <font><Font name="System Bold" size="13.0" /></font>
                                </Label>
                                <Label text="Leaking Toilet Bowl" textFill="#333333" />
                            </VBox>
                            <VBox style="-fx-background-color: #EAEAEA; -fx-background-radius: 8; -fx-padding: 15;">
                                <Label text="Done: 14/5/2025" textFill="#1a1a1a">
                                    <font><Font name="System Bold" size="13.0" /></font>
                                </Label>
                                <Label text="Broken Chair" textFill="#333333" />
                            </VBox>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>